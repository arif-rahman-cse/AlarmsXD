<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_carb_rectangle"
            android:padding="12dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/reminder_xd"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_email" />

        <TextView
            android:id="@+id/all_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:drawableStart="@drawable/ic_all_reminder"
            android:drawablePadding="22dp"
            android:text="@string/all_reminder"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:drawableStart="@drawable/ic_login"
            android:drawablePadding="22dp"
            android:text="@string/login"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="22dp"
            android:text="@string/settings"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_about"
            android:drawablePadding="22dp"
            android:text="@string/about"
            android:textSize="16sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="22dp"
        android:text="@string/log_out"
        android:textSize="16sp" />


</RelativeLayout>