<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_logo"
        android:background="@drawable/bg_carb_rectangle"
        android:padding="12dp"/>

    <TextView

        android:layout_below="@id/logo"
        android:drawablePadding="8dp"
        android:layout_marginTop="36dp"
        android:id="@+id/all_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_reminder"
        android:textColor="@color/purple"
        android:background="?android:selectableItemBackground"
        android:drawableStart="@drawable/ic_all_reminder"/>


    <TextView
        android:drawablePadding="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/settings"
        android:layout_below="@id/all_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/purple"
        android:background="?android:selectableItemBackground"
        android:drawableStart="@drawable/ic_settings"/>



    <TextView
        android:drawablePadding="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/settings"
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:textColor="@color/purple"
        android:background="?android:selectableItemBackground"
        android:drawableStart="@drawable/ic_about"/>



    <TextView
        android:id="@+id/log_out"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:textColor="@color/purple"
        android:background="?android:selectableItemBackground"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="8dp"/>




</RelativeLayout>